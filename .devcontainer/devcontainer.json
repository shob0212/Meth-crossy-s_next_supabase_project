{
  "name": "TripLink DevContainer",
  "dockerFile": "Dockerfile",
  "remoteUser": "node",

  "postCreateCommand": "cd triplink && pnpm install && pnpm add -D @biomejs/biome@2.3.5 && pnpm add -D typescript@5.9.3",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "editor.formatOnSave": true,
        "biome.enable": true,
        "biome.format.enable": true,
        "biome.lint.enable": true,
        "biome.experimental.useServer": true
      },
      "extensions": [
        "ms-azuretools.vscode-docker",
        "seatonjiang.gitmoji-vscode",
        "eamodio.gitlens",
        "ms-vsliveshare.vsliveshare",
        "oderwat.indent-rainbow",
        "streetsidesoftware.code-spell-checker",
        "visualstudioexptteam.vscodeint",
        "mhutchie.git-graph",
        "biomejs.biome"
      ]
    }
  },

  "forwardPorts": [3000, 8787]
}
